  lexical syntax
    [\\] number:[0-9]+                    -> NumChar   {cons("digits")}
    character:[a-zA-Z0-9]                 -> ShortChar {cons("regular")}
    [\\] escape:~[\0-\31A-Za-mo-qsu-z0-9] -> ShortChar {cons("escaped")}

  context-free syntax
    NumChar         -> Character {cons("numeric")}
    ShortChar       -> Character {cons("short")}
